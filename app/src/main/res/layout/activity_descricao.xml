<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.igor.magnoliaprototipos.Descricao"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageFlor"
        android:src="@mipmap/logo_magnolia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="Flor de Maracujá"
        android:id="@+id/txtNomeFlor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/imageFlor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@color/fundolbl"/>

    <TextView
        android:text="Descrição"
        android:id="@+id/labelDescricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="5dp"
        android:layout_below="@id/imageFlor"/>

    <TextView
        android:id="@+id/txtDescricaoFlor"
        android:text="Descição do texto de uma flor falando sobre ele, o que ela faz, como ela funciona, blz bla bla e mais bla bla bla e um monte de coisa que pode ser dita sobre uma flor que não faz nada e fica parada o dia todo."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:layout_below="@id/labelDescricao"
        android:background="@color/fundolbl"/>

    <TextView
        android:text="Cultivo"
        android:id="@+id/labelCultivo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="5dp"
        android:layout_below="@id/txtDescricaoFlor"/>

    <TextView
        android:id="@+id/txtCultivoFlor"
        android:text="Melhor forma de cuidar desse tipo de flor para não ter dor de cabeça."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:layout_below="@id/labelCultivo"
        android:background="@color/fundolbl"/>
    <TextView
        android:text="Valor"
        android:id="@+id/labelValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCultivoFlor"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
         />

    <TextView
        android:text="Valor"
        android:id="@+id/txtDescricaoValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/labelValor"
        android:background="@color/fundolbl"/>

    <ImageView
        android:id="@+id/imageFavorito"
        android:src="@mipmap/ic_favorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCultivoFlor"
        android:layout_alignParentRight="true"
        android:padding="30dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>